{
  "name": "pje-sync-extension",
  "version": "1.0.0",
  "description": "Extensão Chrome para sincronização em tempo real do PJe com Assistente Jurídico",
  "main": "dist/background.js",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'No ESLint configured for extension'",
    "validate": "npm run typecheck && npm run test && npm run build",
    "package": "npm run build && npm run zip",
    "zip": "cd dist && zip -r ../pje-sync-v1.0.0.zip ."
  },
  "keywords": [
    "pje",
    "juridico",
    "chrome-extension",
    "tjmg"
  ],
  "author": "Assistente Jurídico",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.258",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.6.1",
    "copy-webpack-plugin": "^12.0.0",
    "jsdom": "^27.3.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
