{
  "extends": "../tsconfig.paths.json",
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["ES2021", "DOM"],
    "outDir": "./dist",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "..",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "../lib/ai/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "../lib/ai/**/*.test.ts",
    "../lib/ai/**/*.test.tsx",
    "../lib/ai/**/*.spec.ts"
  ]
}
