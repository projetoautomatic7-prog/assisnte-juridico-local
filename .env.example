# =========================================================
# CONFIGURAÇÃO PARA DEPLOY LOCAL (WINDOWS 11)
# =========================================================

# 1. Ambiente e URLs
NODE_ENV=development
APP_BASE_URL=http://localhost:3001
APP_HOST=localhost:3001
VITE_API_BASE_URL=http://localhost:3001
LLM_PROXY_URL=http://localhost:3001/api/llm-proxy

# 2. Banco de Dados Local (PostgreSQL via Prisma)
# Substitua 'usuario', 'senha' e 'assistente_db' pelos seus dados do Postgres local
DATABASE_URL="postgresql://admin:admin123@localhost:5432/assistente_juridico?schema=public"

# 3. Inteligência Artificial (Google Gemini)
# Obtenha em: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=sua_chave_api_gemini_aqui
VITE_GOOGLE_API_KEY=sua_chave_api_gemini_aqui
GEMINI_MODEL=gemini-1.5-flash

# 4. Memória e Cache (Upstash Redis)
# Necessário para os agentes lembrarem do contexto
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
UPSTASH_REDIS_REST_URL="http://localhost:6379" # Nota: Requer proxy REST para Redis local
UPSTASH_REDIS_REST_TOKEN="local_dev"

# 5. Integração WhatsApp (Evolution API)
EVOLUTION_API_URL=https://sua-instancia-evolution.com
EVOLUTION_API_KEY=sua_chave_api_evolution

# 6. Segurança e Autenticação
# Use strings aleatórias e longas para estas chaves
API_SECRET_KEY=uma_senha_forte_para_comunicacao_entre_agentes
CRON_SECRET=uma_senha_para_proteger_rotinas_agendadas
AGENTS_API_KEY=sua_chave_para_acesso_aos_agentes

# 7. Dados do Advogado (Exibição no Frontend)
VITE_DJEN_ADVOGADO_NOME="Seu Nome Completo"
VITE_DJEN_ADVOGADO_OAB="000000/UF"

# 8. Configurações de Sincronização
DJEN_SYNC_API_KEY=chave_para_sincronizacao_manual
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# 9. Qdrant (Vector DB)
VITE_QDRANT_URL=http://localhost:6333
VITE_QDRANT_API_KEY=sua_chave_qdrant_local

# Nota: Se estiver usando 'npx vercel dev', ele lerá este arquivo automaticamente.