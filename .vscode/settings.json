{
  // ========================================
  // ü§ñ GITHUB COPILOT - AGENTE DE CODIFICA√á√ÉO
  // ========================================

  // Habilitar Copilot Instruction Files (copilot-instructions.md)
  "github.copilot.chat.useInstructionFiles": true,

  // Configura√ß√µes avan√ßadas do Copilot
  "github.copilot.chat.alternateGptPrompt.enabled": true,
  "github.copilot.chat.anthropic.thinking.enabled": true,
  "github.copilot.chat.anthropic.tools.websearch.enabled": true,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.editor.enableAutoCompletions": true,

  // üöÄ AUTOMA√á√ÉO M√ÅXIMA - Copilot trabalha sozinho
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": true
  },
  "github.copilot.advanced": {
    "debug.overrideEngine": "gpt-4o",
    "inlineSuggestCount": 3,
    "listCount": 10
  },

  // Instru√ß√µes contextuais para gera√ß√£o de c√≥digo
  "github.copilot.chat.codeGeneration.instructions": [
    {
      "text": "Sempre siga as instru√ß√µes em .github/copilot-instructions.md"
    },
    {
      "text": "Modo MANUTEN√á√ÉO: Apenas corrigir bugs, n√£o adicionar features"
    },
    {
      "text": "Antes de qualquer mudan√ßa, execute verifica√ß√£o di√°ria do sistema autom√°tico"
    },
    {
      "text": "Use TypeScript strict mode e valide tipos"
    },
    {
      "text": "Siga padr√µes React 19 com componentes funcionais"
    },
    {
      "text": "Mantenha compatibilidade com Vercel serverless (Node.js 22.x)"
    }
  ],

  // ========================================
  // üê∞ CODERABBIT - AI CODE REVIEW
  // ========================================

  // Agente IA para aplicar fixes (Native = GitHub Copilot integrado)
  "coderabbit.agentType": "Native",

  // Modo de review autom√°tico ap√≥s commits
  // "prompt" = Pergunta se quer revisar | "auto" = Revisa automaticamente | "off" = Desabilitado
  "coderabbit.autoReviewMode": "prompt",

  // ========================================
  // üéØ SONAR COPILOT ASSISTANT (INTEGRA√á√ÉO)
  // ========================================

  // SonarLint + GitHub Copilot = Sonar Copilot Assistant
  "github.copilot.chat.codeGeneration.useCodeAnalysis": true,
  "github.copilot.chat.localeOverride": "pt-BR",
  "github.copilot.chat.welcomeMessage": "first",

  // Copilot Instructions customizadas para SonarQube fixes
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,

  // ========================================
  // üìù EDITOR - AUTOMA√á√ÉO E FORMATA√á√ÉO
  // ========================================

  // Auto-save r√°pido
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,

  // Format on save
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,

  // ESLint auto-fix on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },

  // Prettier como formatador padr√£o
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ========================================
  // üîç TYPESCRIPT & JAVASCRIPT
  // ========================================

  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.tsserver.maxTsServerMemory": 4096,
  "typescript.tsserver.watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriorityPolling"
  },
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",

  // Inlay Hints (sugest√µes visuais)
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,

  // ========================================
  // üé® TAILWIND CSS
  // ========================================

  "tailwindCSS.experimental.classRegex": [["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]],
  "tailwindCSS.emmetCompletions": true,

  // ========================================
  // ‚úÖ ESLINT
  // ========================================

  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "eslint.format.enable": true,
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],

  // ========================================
  // üß™ TESTES - VITEST
  // ========================================

  "vitest.enable": true,
  "vitest.commandLine": "npm run test",

  // ========================================
  // üöÄ TASKS AUTOM√ÅTICAS
  // ========================================

  "task.allowAutomaticTasks": "on",
  "task.autoDetect": "on",

  // ========================================
  // üîê SEGURAN√áA & PRIVACIDADE
  // ========================================

  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/.vite": true
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.vite": true,
    "**/coverage": true
  },

  // ========================================
  // üîß SONARQUBE/SONARLINT
  // ========================================

  // Conex√£o com SonarCloud
  // Projeto: assistente-jur-dico-principal
  // Organization: thiagobodevanadv-alt
  // GitHub: github.com/thiagobodevanadv-alt/assistente-jur-dico-principal
  "sonarlint.connectedMode.connections.sonarcloud": [
    {
      "connectionId": "sonarcloud-assistente-juridico",
      "organizationKey": "thiagobodevanadv-alt"
    }
  ],

  // An√°lise em tempo real
  "sonarlint.pathToNodeExecutable": "/usr/local/share/nvm/versions/node/v22.21.1/bin/node",
  "sonarlint.ls.javaHome": "/usr/lib/jvm/java-21-openjdk-amd64",
  "sonarlint.output.showAnalyzerLogs": true,
  "sonarlint.output.showVerboseLogs": false,
  "sonarlint.trace.server": "off",
  "sonarlint.disableTelemetry": true,

  // Code Actions: Permitir quick fixes do SonarLint
  "sonarlint.rules": {
    "typescript:S1128": {
      "level": "off"
    }
  },

  // Integra√ß√£o com Copilot para fixes autom√°ticos
  "sonarlint.focusOnNewCode": true,
  "sonarlint.testFilePattern": "**/*.{test,spec}.{ts,tsx,js,jsx}",

  // ========================================
  // üéØ EXPERIENCE & UI
  // ========================================

  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",

  // Terminal
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.fontSize": 13,

  // Editor
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.suggestSelection": "first",
  "editor.inlineSuggest.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,

  // IntelliSense
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "python.testing.unittestArgs": ["-v", "-s", ".", "-p", "*test.py"],
  "python.testing.pytestEnabled": false,
  "python.testing.unittestEnabled": true,
  "chat.tools.terminal.autoReplyToPrompts": true,
  "sonarlint.connectedMode.project": {
    "connectionId": "sonarcloud-assistente-juridico",
    "projectKey": "thiagobodevanadv-alt_assistente-jur-dico-principal"
  },
  "chat.agent.maxRequests": 40,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "notebook.defaultFormatter": "esbenp.prettier-vscode",
  "sarif-viewer.connectToGithubCodeScanning": "off",
  "git.autofetch": true,
  "redhat.telemetry.enabled": true,
  "git.ignoreLimitWarning": true,
  "prettier.useTabs": true,
  "prettier.vueIndentScriptAndStyle": true,
  "prettier.withNodeModules": true,
  "prettier.singleQuote": true,
  "prettier.resolveGlobalModules": true,
  "prettier.requirePragma": true,
  "prettier.requireConfig": true,
  "prettier.jsxSingleQuote": true,
  "prettier.insertPragma": true,
  "prettier.experimentalTernaries": true,
  "prettier.enableDebugLogs": true,
  "prettier.bracketSameLine": true,
  "prettier.singleAttributePerLine": true
}
