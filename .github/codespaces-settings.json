{
  "$schema": "https://raw.githubusercontent.com/microsoft/vscode/main/src/vs/workbench/services/configuration/common/configurationDefaultsSchema.json",
  "description": "Configura√ß√µes autom√°ticas do GitHub Copilot para Codespaces - M√°xima Autonomia",

  // ========================================
  // ü§ñ GITHUB COPILOT - AUTONOMIA M√ÅXIMA
  // ========================================

  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true,
    "typescript": true,
    "typescriptreact": true,
    "javascript": true,
    "javascriptreact": true,
    "json": true,
    "jsonc": true
  },

  "github.copilot.chat.enable": true,
  "github.copilot.chat.useInstructionFiles": true,
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.inlineSuggest.enable": true,

  // üöÄ FERRAMENTAS DE EDI√á√ÉO - Habilitar edi√ß√£o sem confirma√ß√£o
  "chat.editing.enabled": true,
  "chat.editing.confirmEditRequestRemoval": false,
  "chat.extensionTools.enabled": true,
  "chat.tools.terminal.autoApprove": true,
  "chat.tools.terminal.autoReplyToPrompts": true,

  // üîß TOOL SETS - Conjunto completo de ferramentas
  "github.copilot.chat.defaultToolset": "fullEditingTools",

  // ü§ñ AGENTE DE CODIFICA√á√ÉO - Automa√ß√£o total
  "githubPullRequests.codingAgent.enabled": true,
  "githubPullRequests.codingAgent.autoDelegate": true,
  "githubPullRequests.codingAgent.uiIntegration": true,
  "githubPullRequests.pullRequestCardEnabled": true,
  "chat.agentSessionsViewLocation": "view",

  // üìù INSTRU√á√ïES DE GERA√á√ÉO DE C√ìDIGO
  "github.copilot.chat.codeGeneration.instructions": [
    {
      "text": "Sempre siga as instru√ß√µes em .github/copilot-instructions.md"
    },
    {
      "text": "Modo MANUTEN√á√ÉO: Apenas corrigir bugs cr√≠ticos, n√£o adicionar features novas"
    },
    {
      "text": "Antes de qualquer mudan√ßa, execute verifica√ß√£o di√°ria do sistema autom√°tico"
    },
    {
      "text": "Use TypeScript strict mode e valide todos os tipos"
    },
    {
      "text": "Siga padr√µes React 19 com componentes funcionais apenas"
    },
    {
      "text": "Mantenha compatibilidade com Vercel serverless (Node.js 22.x obrigat√≥rio)"
    }
  ],

  // ========================================
  // üîí SEGURAN√áA E WORKSPACE TRUST
  // ========================================

  // Confiar automaticamente no workspace (necess√°rio para automa√ß√£o)
  "security.workspace.trust.enabled": true,
  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.emptyWindow": true,

  // ========================================
  // üì¶ GIT E GITHUB
  // ========================================

  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.fetchOnPull": true,
  "git.pruneOnFetch": true,
  "git.pullBeforeCheckout": true,
  "git.rebaseWhenSync": false,

  "github.gitProtocol": "https",
  "github.branchProtection": true,
  "github.codespaces.defaultExtensions": [
    "GitHub.copilot",
    "GitHub.copilot-chat",
    "GitHub.vscode-pull-request-github",
    "dbaeumer.vscode-eslint",
    "esbenp.prettier-vscode"
  ],

  // ========================================
  // üõ†Ô∏è AUTOMA√á√ÉO DE TASKS
  // ========================================

  "task.allowAutomaticTasks": "on",
  "task.autoDetect": "on",
  "task.problemMatchers.neverPrompt": true,
  "task.saveBeforeRun": "always",

  // ========================================
  // ‚úèÔ∏è EDITOR - FORMATA√á√ÉO AUTOM√ÅTICA
  // ========================================

  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },

  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  // ========================================
  // üß™ TESTES AUTOM√ÅTICOS
  // ========================================

  "testing.automaticallyOpenPeekView": "never",
  "testing.autoRun.mode": "onNewCode",

  // ========================================
  // üîß TERMINAL INTEGRADO
  // ========================================

  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.shellIntegration.decorationsEnabled": "both",
  "terminal.integrated.defaultProfile.linux": "bash",

  // ========================================
  // üìä TELEMETRIA E PRIVACIDADE
  // ========================================

  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,

  // ========================================
  // üé® UI E EXPERI√äNCIA
  // ========================================

  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "workbench.editor.revealIfOpen": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  // ========================================
  // üîç TYPESCRIPT E LINGUAGENS
  // ========================================

  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,
  "typescript.preferences.importModuleSpecifier": "relative",
  "javascript.updateImportsOnFileMove.enabled": "always",

  // ========================================
  // üßπ SONARLINT E QUALIDADE
  // ========================================

  "sonarlint.connectedMode.connections.sonarcloud": [
    {
      "organizationKey": "thiagobodevanadv-alt",
      "connectionId": "sonarcloud-assistente-juridico"
    }
  ],
  "sonarlint.connectedMode.project": {
    "connectionId": "sonarcloud-assistente-juridico",
    "projectKey": "thiagobodevanadv-alt_assistente-jur-dico-principal"
  }
}
